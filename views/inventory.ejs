<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventory List</title>
  <!-- Add any additional styles or links to external stylesheets here -->
  <link rel="stylesheet" href="/styles/home.css">
  <link rel="stylesheet" href="/styles/inventory.css">
</head>
<body>
  <header>
    <h1>Inventory List</h1>
    <a href="/home">Home</a>
    <a href="/logout">Logout</a>
  </header>
  
    <div class="container">
      <% if (items && items.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Quantity</th>
              <th>Action</th> <!-- Add a new column for actions -->
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
              <tr>
                <td><%= item.name %></td>
                <td><%= item.description %></td>
                <td><%= item.quantity %></td>
                <td>
                  <!-- Add a link/button to edit the item -->
                  <a href="/inventory/<%= item._id %>/edit">Edit</a>
                  <a href="#" onclick="deleteItem('<%= item._id %>')">Delete</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p>No items available.</p>
      <% } %>
    </div>
    <!-- Add any additional HTML elements or links here -->
  </body>
  <!-- Add any additional HTML elements or links here -->
</body>
</html>
<script>
  function deleteItem(itemId) {
    if (confirm('Are you sure you want to delete this item?')) {
      fetch(`/api/inventory/${itemId}`, {
        method: 'DELETE',
      })
        .then(response => {
          if (!response.ok) {
            throw new Error(`HTTP error! Status: ${response.status}`);
          }
          return response.json();
        })
        .then(data => {
          // Handle success, e.g., refresh the page or update the UI
          console.log('Item deleted successfully:', data);
          window.location.reload(); // Refresh the page
        })
        .catch(error => {
          // Handle errors
          console.error('Error deleting item:', error);
        });
    }
    window.location.reload();
  }
</script>